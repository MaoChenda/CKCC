<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scroll_view_scholarship"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <!--name for school scholarship -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_gravity="top"
                android:background="@color/colorRed">
                <TextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:text="RESULTS BELOW: "
                    android:textColor="@color/colorWhite"/>
            </LinearLayout>

            <!--card for school scholarship-->
            <LinearLayout
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_scholarship_red">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:layout_width="140dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_gravity="start">
                        <TextView
                            android:layout_marginTop="15dp"
                            android:textSize="20sp"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="start"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Database"
                            android:textStyle="bold"
                            android:layout_marginBottom="10dp"/>
                        <TextView
                            android:layout_marginTop="15dp"
                            android:textSize="20sp"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="start"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="OS"
                            android:textStyle="bold"
                            android:layout_marginBottom="10dp"/>
                        <TextView
                            android:layout_marginTop="15dp"
                            android:textSize="20sp"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="start"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Data Mining"
                            android:textStyle="bold"
                            android:layout_marginBottom="10dp"/>
                        <TextView
                            android:layout_marginTop="15dp"
                            android:textSize="20sp"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="start"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CG"
                            android:textStyle="bold"
                            android:layout_marginBottom="10dp"/>
                        <TextView
                            android:layout_marginTop="15dp"
                            android:textSize="20sp"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="start"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Android"
                            android:textStyle="bold"
                            android:layout_marginBottom="10dp"/>
                        <TextView
                            android:layout_marginTop="15dp"
                            android:textSize="20sp"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="start"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Math"
                            android:textStyle="bold"
                            android:layout_marginBottom="10dp"/>
                        <TextView
                            android:layout_marginTop="15dp"
                            android:textSize="20sp"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="start"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Enterprenuer"
                            android:textStyle="bold"
                            android:layout_marginBottom="10dp"/>
                        <TextView
                            android:layout_marginTop="15dp"
                            android:textSize="20sp"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="start"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Network"
                            android:textStyle="bold"
                            android:layout_marginBottom="10dp"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_gravity="end"
                        android:paddingStart="50dp"
                        android:paddingEnd="50dp">
                        <TextView
                            android:id="@+id/db"
                            android:layout_marginTop="15dp"
                            android:textSize="20sp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="60p"
                            android:layout_marginBottom="10dp"/>
                        <TextView
                            android:id="@+id/os"
                            android:layout_marginTop="15dp"
                            android:textSize="20sp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="56p"
                            android:layout_marginBottom="10dp"/>
                        <TextView
                            android:id="@+id/dm"
                            android:layout_marginTop="15dp"
                            android:textSize="20sp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="56p"
                            android:layout_marginBottom="10dp"/>
                        <TextView
                            android:id="@+id/cg"
                            android:layout_marginTop="15dp"
                            android:textSize="20sp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="56p"
                            android:layout_marginBottom="10dp"/>
                        <TextView
                            android:id="@+id/andriod"
                            android:layout_marginTop="15dp"
                            android:textSize="20sp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="56p"
                            android:layout_marginBottom="10dp"/>
                        <TextView
                            android:id="@+id/math"
                            android:layout_marginTop="15dp"
                            android:textSize="20sp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="56p"
                            android:layout_marginBottom="10dp"/>
                        <TextView
                            android:id="@+id/enterpreneur"
                            android:layout_marginTop="15dp"
                            android:textSize="20sp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="56p"
                            android:layout_marginBottom="10dp"/>
                        <TextView
                            android:id="@+id/network"
                            android:layout_marginTop="15dp"
                            android:textSize="20sp"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="56p"
                            android:layout_marginBottom="10dp"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>
